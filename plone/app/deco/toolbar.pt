<!doctype html>
<html lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n">
<html>
<head>

</head>
<body>

  <div id="deco-toolbar" style="display:none;">
    <ul class="nav nav-pills pull-left">
      <li>
        <div class="btn btn-large" id="plone-deco-addcolumn">
          Add Column
        </div>
      </li>
      <li>
        <div class="btn btn-large" id="plone-deco-addrow">
          Add Row
        </div>
      </li>
    </ul>
    <ul class="nav nav-pills pull-right">
      <li class="pull-right">
        <a class="btn btn-primary btn-large" href="#"
           id="deco-toolbar-save">Save</a>
      </li>
      <li class="pull-right">
        <a class="btn btn-large" href="#"
          id="deco-toolbar-cancel">Cancel</a>
      </li>
    </ul>

    <tal:tiletypes define="view nocall:context/@@add-tile|nothing"
                   condition="nocall:view">
      <metal:block use-macro="context/@@add-tile/macros/tiletypes" />
    </tal:tiletypes>

  </div>

</body>
</html>
